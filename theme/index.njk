{% extends "layout.njk" %}

{% block content %}
<article class="home">
    <header class="home-header">
        <h1>{{ site.title }}</h1>
        <p class="description">{{ site.description }}</p>
        <p class="author">作者：{{ site.author }}</p>
    </header>
    
    
    <div class="container">
        {% include "partials/markdown-body.njk" %} 
        <section class="chapters-preview">
            <h2><i class="fa fa-navicon"></i>目录</h2>
            {{ site.menuHtml | safe }}
        </section>
    </div>
    
</article>
{% endblock %}